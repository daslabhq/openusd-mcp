            {
                def Material "Red"
                {
                    token outputs:surface.connect = </Product/Materials/Red/PBRShader.outputs:surface>

                    def Shader "PBRShader"
                    {
                        uniform token info:id = "UsdPreviewSurface"
                        color3f inputs:diffuseColor = (0.72, 0.08, 0.08)
                        float inputs:metallic = 0.15
                        float inputs:opacity = 1
                        float inputs:roughness = 0.3
                        token outputs:surface
                    }
                }
            }

            over "Body" (
                prepend apiSchemas = ["MaterialBindingAPI"]
            )
            {
                rel material:binding = </Product/Materials/Red>
            }

        }
        "silver" {
            def "Materials"
            {
                def Material "Silver"
                {
                    token outputs:surface.connect = </Product/Materials/Silver/PBRShader.outputs:surface>

                    def Shader "PBRShader"
                    {
                        uniform token info:id = "UsdPreviewSurface"
                        color3f inputs:diffuseColor = (0.75, 0.75, 0.77)
                        float inputs:metallic = 0.85
                        float inputs:opacity = 1
                        float inputs:roughness = 0.3
                        token outputs:surface
                    }
                }
            }

            over "Body" (
                prepend apiSchemas = ["MaterialBindingAPI"]
            )
            {
                rel material:binding = </Product/Materials/Silver>
            }

        }
    }
    variantSet "finish" = {
        "glossy" {
            over "Materials"
            {
                def Material "FinishGlossy"
                {
                    token outputs:surface.connect = </Product/Materials/FinishGlossy/PBRShader.outputs:surface>

                    def Shader "PBRShader"
                    {
                        uniform token info:id = "UsdPreviewSurface"
                        color3f inputs:diffuseColor = (0.08, 0.08, 0.1)
                        float inputs:metallic = 0
                        float inputs:opacity = 1
                        float inputs:roughness = 0.1
                        token outputs:surface
                    }
                }
            }

            over "Body" (
                prepend apiSchemas = ["MaterialBindingAPI"]
            )
            {
                rel material:binding = </Product/Materials/FinishGlossy>
            }

        }
        "matte" {
            over "Materials"
            {
                def Material "FinishMatte"
                {
                    token outputs:surface.connect = </Product/Materials/FinishMatte/PBRShader.outputs:surface>

                    def Shader "PBRShader"
                    {
                        uniform token info:id = "UsdPreviewSurface"
                        color3f inputs:diffuseColor = (0.08, 0.08, 0.1)
                        float inputs:metallic = 0
                        float inputs:opacity = 1
                        float inputs:roughness = 0.8
                        token outputs:surface
                    }
                }
            }

            over "Body" (
                prepend apiSchemas = ["MaterialBindingAPI"]
            )
            {
                rel material:binding = </Product/Materials/FinishMatte>
            }

        }
        "satin" {
            over "Materials"
            {
                def Material "FinishSatin"
                {
                    token outputs:surface.connect = </Product/Materials/FinishSatin/PBRShader.outputs:surface>

                    def Shader "PBRShader"
                    {
                        uniform token info:id = "UsdPreviewSurface"
                        color3f inputs:diffuseColor = (0.08, 0.08, 0.1)
                        float inputs:metallic = 0
                        float inputs:opacity = 1
                        float inputs:roughness = 0.4
                        token outputs:surface
                    }
                }
            }

            over "Body" (
                prepend apiSchemas = ["MaterialBindingAPI"]
            )
            {
                rel material:binding = </Product/Materials/FinishSatin>
            }

        }
    }
}

